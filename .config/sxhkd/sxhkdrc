#touchbar
super + ctrl + space
	touchpadtoggle

#dwm
mod3 + q
    dwmc killclient

mod3 + space
    dwmc zoom

mod3 + f
	fd-search

mod3 + b
    rbuku

mod3 + Return
    $TERMINAL

mod3 + d
	rofi -show drun

mod3 + z
    zotero

mod3 + c
    colorpicker

mod3 + shift + BackSpace
    killall screenkey || screenkey --bg-color "#222d32" -s small -f "Apercu Mono" -t 1 --font-color "#BABABA" --mods-mode tux

mod3 + BackSpace
    find-cursor -l 4 -c "#82a497" -s 150

mod3 + Escape
    pkill -USR1 -x sxhkd && notify-send -- "SXHKD" "Reloaded key bindings"
