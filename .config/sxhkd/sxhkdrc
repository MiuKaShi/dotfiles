#touchbar
super + ctrl + space
	touchpadtoggle

#dwm
hyper + q
   dwmc killclient

hyper + space
    dwmc zoom

hyper + f
    rofi -no-lazy-grab -show file-browser-extended -modi file-browser-extended

hyper + b
    dwmc togglebar

hyper + Return
    $TERMINAL

hyper + d
	rofi -show drun

hyper + z
    zotero

hyper + m
    env MESA_LOADER_DRIVER_OVERRIDE=i965 MATLAB_JAVA=/usr/lib/jvm/java-8-openjdk/jre matlab -desktop

hyper + c
    colorpicker

hyper + shift + BackSpace
    killall screenkey || screenkey --bg-color "#222d32" -s small -f "Apercu Mono" -t 1 --font-color "#BABABA" --mods-mode tux

hyper + BackSpace
    find-cursor -l 4 -c "#66aabb" -s 150

hyper + Escape
    pkill -USR1 -x sxhkd && notify-send -- "SXHKD" "Reloaded key bindings"
