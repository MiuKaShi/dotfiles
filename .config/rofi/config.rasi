configuration {
    display-drun: "Applications:";
    display-window: "Windows:";
    drun-display-format: "{name}";
	font: "MonoLisa 26";
	location: 0;
	yoffset: -150;
	matching: "fuzzy";
	sort: true;
    modi: "window,run,drun";
    show-icons: true;
    icon-theme: "Papirus";
	display-run: " ";
	display-drun: "  ";
	display-window: "  ";
