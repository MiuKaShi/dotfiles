# More Vim like movements
move_left               l
move_right              h
screen_down             d
screen_up               u
fit_to_page_width       a
fit_to_page_width_smart s
open_document_embedded  o
copy                    y
close_window            q
toggle_custom_color     i
reload                  r
rotate_clockwise        <S-r>
zoom_in                 <S-k>
zoom_out                <S-j>

next_chapter        g[
prev_chapter        g]


# Misc
toggle_presentation_mode <A-p>

# Highlight 
add_highlight        <C-h>
delete_highlight	 xh
goto_highlight		 gh
goto_next_highlight  gnh
goto_prev_highlight  g<S-n>h

# bookmark
add_bookmark        b
execute_command_b <S-b> #bookmark with buku
execute_command_i <S-i> #create link
delete_bookmark     xb
goto_bookmark       gb

prev_state          <S-h>
next_state          <S-l>

# Custom commands

execute_command_a <C-a>
execute_command_e <C-e>
execute_command_c <C-c>
execute_command_l <C-l>
execute_command_y <C-y>
execute_command_n <C-n>
execute_command_v <C-v>
execute_command_x <C-x>
execute_command_w <C-w>
execute_command_o <C-o>
execute_command_z <C-z>
execute_command_m <C-m>
