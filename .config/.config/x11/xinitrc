#!/bin/sh

# Source xprofile
if [ -f "${XDG_CONFIG_HOME:-$HOME/.config}/x11/xprofile" ]; then
    . "${XDG_CONFIG_HOME:-$HOME/.config}/x11/xprofile"
else
    . "$HOME/.xprofile"
fi

# start user login session message dbus
# if [ -z "$DBUS_SESSION_BUS_ADDRESS" ]; then
#     export DBUS_SESSION_BUS_ADDRESS="unix:path=$XDG_RUNTIME_DIR/bus"
#     dbus-daemon --session --fork --address="$DBUS_SESSION_BUS_ADDRESS"
# fi
# eval "$(ssh-agent)"

# Activate dbus variables
dbus-update-activation-environment --all

session=${1:-dwm}

case $session in
    dwm) dbus-launch ssh-agent dwm ;;
    gnome)
        export XDG_SESSION_TYPE=x11
        export GDK_BACKEND=x11
        dbus-launch ssh-agent gnome-session
        ;;
    xfce)
        dbus-launch ssh-agent startxfce4
        ;;
    cinnamon) dbus-launch ssh-agent gnome-session-cinnamon ;;
    *) dbus-launch ssh-agent $1 ;;
esac
