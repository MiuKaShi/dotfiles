bin/sh

# This file runs when a DM logs you into a graphical session.
# If you use startx/xinit like a Chad, this file will also be sourced.

# pre-setting
remaps &
xclick &

setbg      # set the background
displayout # set display layout

autostart="watchfile unclutter xplugd mpd"

for program in $autostart; do
    pidof -sx "$program" || "$program" &
done >/dev/null 2>&1

# run user services (run under current user) using runsvdir
runsvdir -P ~/.runit/runsvdir &
runsvdir_pid=$!
