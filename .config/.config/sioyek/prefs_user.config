# Esteatics
ui_font     MonoLisa
font_size   28
status_bar_font_size 18
should_warn_about_user_key_override 0
dark_mode_contrast			0.6
#toggle_titlebar 1

shared_database_path    /home/miuka/.config/sioyek/shared.db

## Touchpad sensitivity
touchpad_sensitivity 0.3

# How many inches we move vertically/horizontally when performing move_* commands
horizontal_move_amount    5

# The color with which the screen is cleared before rendering the pdf
background_color    1.0 1.0 1.0
dark_mode_background_color    0 0 0

# gruvbox color.
custom_background_color  0.15 0.13 0.13
custom_text_color   0.87 0.82 0.75

# Synctex
inverse_search_command  nvr --remote-silent %1 -c %2

hover_overview	0
check_for_updates_on_startup 0
should_launch_new_window 1
show_doc_path 1
search_url_d	https://google.com/?q=
super_fast_search 1
case_sensitive_search 0


new_command _sync_file cp %1 /home/miuka/SynData
new_command _rbookmark bash /home/miuka/.config/sioyek/scripts/r-bookmark.sh %2 %4
new_command _cite_bib st -e cite-bib %1
new_command _cite_ref cite-ref %1 # open refrence list
new_command _cite_copykey cite-copy %1 -k # copy citekey
new_command _cite_copybib cite-copy %1 # copy bib
new_command _link_booklink bash /home/miuka/.config/sioyek/scripts/booklink.sh %2 %4
new_command _chatpaper chatpaper %1
new_command _cite_info cite-info %1
new_command _cite_lf cite-lf %1
new_command _bib_note bib-note %2
new_command _cite_html cite-html %1
new_command _pdftools pdftools %1
new_command _pdfbrowser pdfbrowser %1
new_command _zathura zathura %1
new_command _zotadd zotadd %1

