#! /bin/sh

unset LIBVA_DRIVER_NAME VDPAU_DRIVER DRI_PRIME

xrandr --dpi 138 --fb 6000x3840 --output DP1 --scale 1.5x1.5 --pos 3840x0 --rotate right --output DP2 --primary --mode 3840x2160 --pos 0x345 --rotate normal --output HDMI1 --off --output VIRTUAL1 --off

export LIBVA_DRIVER_NAME=iHD
export VDPAU_DRIVER=va_gl

xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/displayset/homexresources &
xrdbpid=$!
