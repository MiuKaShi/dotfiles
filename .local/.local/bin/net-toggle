#!/bin/sh

device=$(printf "ğŸŒ LAN\nğŸ“¶ WIFI" | dmenu -i -p "choose device:")
[ -z "$device" ] && exit 0
action=$(printf "âœ… Enable\nâŒ Disable" | dmenu -i -p "toggle:")
[ -z "$action" ] && exit 0

lan_toggle() {
    case $action in
        'âœ… Enable')
            nmcli connection up "Wired connection 1"
            notify-send -t 1000 "Network" "lan enabled!"
            ;;
        'âŒ Disable')
            nmcli connection down "Wired connection 1"
            notify-send -t 1000 "Network" "lan disabled!"
            ;;
    esac
}

wifi_toggle() {
    case $action in
        'âœ… Enable')
            nmcli radio wifi on
            notify-send -t 1000 "Network" "wifi enabled!"
            ;;
        'âŒ Disable')
            nmcli radio wifi off
            notify-send -t 1000 "Network" "wifi disabled!"
            ;;
    esac
}

case "$device" in
    'ğŸŒ LAN')
        lan_toggle
        ;;
    'ğŸ“¶ WIFI')
        wifi_toggle
        ;;
esac
