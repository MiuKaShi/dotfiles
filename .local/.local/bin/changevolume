#!/bin/bash

# Sends a notification with the current volume level
function send_notification() {
    local volume=$(pamixer --get-volume)
    notify-send -a Pamixer -u low -r 993 -h int:value:"$volume" -i "volume-$1" "Volume: ${volume}%" -t 2000
}

# Increases the volume by 5%
function increase_volume() {
    pamixer -u
    pamixer -i 5 --allow-boost
    send_notification up
}

# Decreases the volume by 5%
function decrease_volume() {
    pamixer -u
    pamixer -d 5 --allow-boost
    send_notification down
}

# Toggles mute on/off
function toggle_mute() {
    pamixer -t
    if "$(pamixer --get-mute)"; then
        notify-send -a Pamixer -i volume-mute -t 2000 -r 993 -u low "Muted"
    else
        send_notification up
    fi
}

# Main script
case $1 in
    up)
        increase_volume
        ;;
    down)
        decrease_volume
        ;;
    mute)
        toggle_mute
        ;;
esac

kill -44 "$(pidof dwmblocks)"
