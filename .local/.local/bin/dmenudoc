#!/bin/bash

DOCINFO=$(printf "APDL\nElement\nTheory" | dmenu -p "Docs:")

case $DOCINFO in
    *APDL*)
        DOCPATH=$HOME/Documents/Engineering_tools/APDL/help_doc/ans_apdl_v182
        firefox "$DOCPATH"/Hlp_C_CmdTOC.html
        ;;
    *Element*)
        DOCPATH=$HOME/Documents/Engineering_tools/Workbench/help_doc/ans_elem_v182
        firefox "$DOCPATH"/Hlp_E_ElemTOC.html
        ;;
    *Theory*)
        DOCPATH=$HOME/Documents/Engineering_tools/Workbench/help_doc/ans_thry_v182
        firefox "$DOCPATH"/ans_thry.html
        ;;
esac
