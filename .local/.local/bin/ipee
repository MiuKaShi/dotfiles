#!/bin/bash

if [[ -z ${MONITOR_ENV} ]]; then
    echo "monitor env not set!"
    exit 1
fi

case $MONITOR_ENV in
    "home")
        QT_ENABLE_HIGHDPI_SCALING=0 QT_SCALE_FACTOR=2 ipe
        ;;
    "lab")
        QT_ENABLE_HIGHDPI_SCALING=0 QT_SCALE_FACTOR=1.5 ipe
        ;;
    "note")
        QT_SCALE_FACTOR=1.0 ipe
        ;;
esac
