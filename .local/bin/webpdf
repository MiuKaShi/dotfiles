#!/bin/sh

file=$(readlink -f "$1")
dir=${file%/*}
name=$(basename "$file")

port="25851"
pidnum=$(lsof -t -i:$port)

cd "$dir" || exit 1

open() {
    python3 -m http.server $port >>/dev/null 2>&1 &
    xdg-open http://localhost:$port/"$name" &
}

if [ -z "$pidnum" ]; then
    open
else
    kill "$(lsof -t -i:"$port")"
    open
fi

