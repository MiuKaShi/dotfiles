#!/bin/sh

# This script is called on startup to remap keys.
# Increase key speed via a rate change
xset r rate 300 50
# Map the caps lock key to hyper...
setxkbmap -option caps:hyper
xmodmap -e "keycode 66 = Hyper_L Hyper_R"
xmodmap -e "remove Mod4 = Hyper_L" -e "add Mod3 = Hyper_L Hyper_R"
# But when it is pressed only once, treat it as escape.
killall xcape 2>/dev/null ; xcape -e 'Super_L=Escape'; xcape -e 'Hyper_L=Escape'
# Map the menu button to right super as well.
#xmodmap -e 'keycode 135 = Super_R'
xmodmap -e 'keycode 118 = XF86TouchpadToggle NoSymbol XF86TouchpadToggle'
xmodmap -e 'keycode 120 = XF86Tools NoSymbol XF86Tools'
xmodmap -e 'keycode 126 = XF86Battery NoSymbol XF86Battery'

# Turn off the caps lock if on since there is no longer a key for it.
xset -q | grep "Caps Lock:\s*on" && xdotool key Caps_Lock

