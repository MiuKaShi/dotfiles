#!/bin/bash

# This script sets up a custom lock screen using i3lock-color-git

# Set variables
cache_path="$HOME/.cache/stlock"
fg_color="fefefeff"
wrong_color="f82a11aa"
highlight_color="39393999"
verif_color="fefefe66"

# Set up lock screen with custom settings
i3lock \
    -n --blur 5 \
    --radius 200 --ring-width 3 \
    --time-str="%H:%M" --time-size=80 --date-str="%a, %b %d" --date-size=30 \
    --verif-text="" --wrong-text="" --noinput-text="" \
    --force-clock --clock --date-font="Source Code Pro" --time-font="Source Code Pro" \
    --insidever-color="$fg_color" --insidewrong-color="$wrong_color" --inside-color="fefefe00" \
    --ringver-color="$verif_color" --ringwrong-color="$wrong_color" --ring-color="$fg_color" \
    --keyhl-color="$highlight_color" --bshl-color="$highlight_color" --separator-color=00000000 \
    --date-color="$fg_color" --time-color="$fg_color" --greeter-color="$fg_color"

# Move the mouse to fix an issue where the lock screen doesn't appear automatically
xdotool mousemove_relative 1 1
