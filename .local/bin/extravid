#!/bin/sh
# need brotab

vidlist=$(bt list | awk '{$1=""; print $0}' | grep -E "bilibili.com/video|youtube.com/watch")
title=$(echo "$vidlist" |  sed 's/https:.*//' | dmenu -i -p "Watch video (ESC to cancel)" -l 20)
url=$(echo "$vidlist" | grep "$title" | awk '{print $NF}')

[ ! -z "$url" ] && linkhandler "$url" || exit 0
