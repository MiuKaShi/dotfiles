#!/bin/sh

DOI=$1

# update citekey
case $DOI in
    *"doi:"*)
        citekey=$(echo "$citekey" | grep -oP '(?<=doi:).*') ;;  
    *"org/"*)
        citekey=$(echo "$citekey" | grep -oP '(?<=org/).*') ;;
esac

manubot cite --format plain --csl "$CSL" --bibliography "$BIB" --log-level ERROR "$DOI"


