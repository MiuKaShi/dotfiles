#!/bin/sh

# open pdf based on citekey

citekey=$(cat $BIB | grep '@' | grep -oP '(?<={).*' | tr -d ',' | dmenu -i -p "Open citations:")

echo $citekey

if [[ $citekey ]]; then
    pdfpath=$(bibtool -r biblatex -X "$citekey$" "$BIB" | grep -oP '(?<==[[:space:]]).*' | tr -d '{}' | grep -o '/home.*')
    xdg-open "$pdfpath" &
fi


