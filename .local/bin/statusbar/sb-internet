#!/bin/sh

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ğŸŒ if connected to ethernet or â if none.
# Show ğŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
    1)
        iwd-dmenu
        pkill -RTMIN+4 dwmblocks
        ;;
    3) notify-send "ğŸŒ Internet module" "\- Click to connect
âŒ: no network
ğŸ“¶: wifi connection with quality
ğŸŒ: ethernet working
" ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null; then
    sigStr="$(awk '/^\s*w/ {print int($3 * 100 / 70) "%"}' /proc/net/wireless)"
    device="$(iwctl device list | awk 'FNR == 5 {print $2}')"
    # ssid="$(nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -c 5-)" # for networkmanager
    ssid="$(iwctl station $device show | grep 'Connected network' | awk '{print $3}')"
    neticon="ğŸ“¶$ssid($sigStr)"
elif grep -xq 'up' /sys/class/net/e*/operstate 2>/dev/null; then
    neticon="ğŸŒ LAN"
else
    neticon="âŒ OFF"
fi

printf "%s\n" "$neticon"
