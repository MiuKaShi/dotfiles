#! /bin/sh

unset LIBVA_DRIVER_NAME VDPAU_DRIVER DRI_PRIME

xrandr --dpi 138 --fb 6000x3840 --output DP1 --primary --mode 3840x2160 --pos 2160x345 --rotate normal --output DP2 --scale 1.5x1.5 --pos 0x0 --rotate left --panning 2160x3840+3840+0 --output HDMI1 --off --output VIRTUAL1 --off

export LIBVA_DRIVER_NAME=iHD
export VDPAU_DRIVER=va_gl

xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/displayset/homexresources &
xrdbpid=$!
